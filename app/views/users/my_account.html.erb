<div class="container mx-auto">
  <div class="flex flex-wrap">
    <div class="w-full">
        <div class="flex items-center">
          <h3 class="font-bold">登録情報</h3>
        </div>
      <table class="table-auto border-collapse border border-gray-300 w-full">
        <tr>
          <td class="bg-gray-200 p-2">氏名</td>
          <td class="p-2"><%= @user.name %></td>
        </tr>
        <tr>
          <td class="bg-gray-200 p-2">メールアドレス</td>
          <td class="p-2"><%= @user.email %></td>
        </tr>
      </table>
      <div class="text-right">
        <%= button_to 'アカウント削除', my_account_path, data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' } , class: 'mt-4 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
      </div>
    </div>
  </div>
</div>
