<div class="centered">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-lg-8 mx-auto">
        <%= form_with model: @user do |f| %>
          <div class="mb-4">
            <%= render 'shared/error_messages', object: f.object %>
          </div>
          <div class="relative">
            <%= f.label :name, class: "flex items-center mb-2 text-gray-600 text-sm font-medium" %>
            <%= f.text_field :name, id: "Medium-input", class: "block w-full max-w-full px-4 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-transparent border border-gray-300 rounded-full placeholder-gray-400 focus:outline-none leading-relaxed", placeholder: "名前", required: "" %>
            </div>
          <div class="mb-3">
            <%= f.label :email, class: "flex items-center mb-2 text-gray-600 text-sm font-medium" %>
            <%= f.email_field :email, id: "Medium-input", class: "block w-full max-w-full px-4 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-transparent border border-gray-300 rounded-full placeholder-gray-400 focus:outline-none leading-relaxed", placeholder: "メールアドレス", required: "" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, class: "flex items-center mb-2 text-gray-600 text-sm font-medium" %>
            <%= f.password_field :password, id: "Medium-input", class: "block w-full max-w-full px-4 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-transparent border border-gray-300 rounded-full placeholder-gray-400 focus:outline-none leading-relaxed", placeholder: "パスワード", required: "" %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, class: "flex items-center mb-2 text-gray-600 text-sm font-medium" %>
            <%= f.password_field :password_confirmation, id: "Medium-input", class: "block w-full max-w-full px-4 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-transparent border border-gray-300 rounded-full placeholder-gray-400 focus:outline-none leading-relaxed", placeholder: "パスワード確認", required: "" %>
          </div>
          <%= f.submit "登録", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
